{
    "compileOnSave": false,
    "compilerOptions": {
      "target": "es2017",
      "lib": ["es2017", "esnext.asynciterable","dom", "es6", "dom.iterable", "scripthost"],
      "typeRoots": ["node_modules/@types"],
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "module": "commonjs",
      "pretty": true,
      "sourceMap": true,
      "declaration": true,
      "outDir": "dist",
      "allowJs": true,
      "noEmit": false,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "importHelpers": true,
      "skipLibCheck": true,
      "strict": true,
      "baseUrl": ".",
      "paths": {
        "@config/*": ["src/config/*"],
        "@controllers/*": ["src/controllers/*"],
        "@commonControllers/*": ["src/controllers/common/*"],
        "@models/*": ["src/models/*"],
        "@routes/*": ["src/routes/*"],
        "@validation/*": ["src/validation/*"],
        "@helpers/*": ["src/helpers/*"]
      }
    },
    "include": ["src/**/*.ts", "src/**/*.json", ".env"],
    "exclude": ["node_modules", "src/http", "src/logs", "src/tests"]
  }
  